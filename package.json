        }
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": "error"
        },
        "plugins": [
            "prettier"
        ]
    },
    "scripts": {
        "pretest": "eslint .",
        "test": "jest"
    },
    "repository": "git@github.com:lean-web/lean-jsx.git",
    "license": "MPL-2.0"
