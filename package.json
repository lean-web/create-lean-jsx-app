  "description": "Generate lean-jsx based web applications",
  "homepage": "",
  "type": "module",
  "author": {
    "name": "Pedro F Marquez",
    "email": "pfernandom@gmail.com",
    "url": "https://pedromarquez.dev"
  },
  "bin": {
    "create-lean-jsx-app": "./index.js"
  },
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "keywords": [
    "jsx",
    "streaming",
    "html",
    "express",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/plugin-transform-modules-commonjs": "^7.23.0",
    "@babel/preset-env": "^7.23.2",
    "@types/jest": "^29.5.6",
    "@types/yeoman-assert": "^3.1.3",
    "@types/yeoman-environment": "^2.10.10",
    "babel-jest": "^29.7.0",
    "bun": "^1.0.7",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^29.7.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "ts-jest": "^29.1.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-environment": "^4.0.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "glob": "^10.3.10",
    "yeoman-generator": "^6.0.1",
    "yeoman-test": "^8.2.0",
    "yosay": "^2.0.2"
  },
  "peerDependencies": {
    "yeoman-environment": "^4.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "bun test",
    "testApp": "./scripts/test-generated-app.sh"
  },
  "repository": "git@github.com:lean-web/lean-jsx.git",
  "license": "MPL-2.0"
}
