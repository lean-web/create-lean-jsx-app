{
    "name": "generator-create-lean-jsx-app",
    "version": "0.0.3",
    "description": "Generate lean-jsx based web applications",
    "homepage": "",
    "type": "module",
    "author": {
        "name": "Pedro F Marquez",
        "email": "pfernandom@gmail.com",
        "url": "https://pedromarquez.dev"
    },
    "bin": {
