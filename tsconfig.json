{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": false,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "jsx": "react-jsx", // support custom JSX
    "jsxImportSource": "lean-jsx/lib/jsx",
    "paths": {
      "@/": ["./generators/app/templates/src/"],
      "@/*": ["./generators/app/templates/src/*"]
    }
  },
  "include": [
    "generators/**/*.ts",
    "generators/**/*.tsx",
    "index.js",
    "__tests__/**/*.js",
    "__tests__/**/*.ts",
    "jest.config.ts",
    "__tests__/app.test.mjs"
  ],
  "exclude": ["node_modules"]
}
